<Window x:Class="Example_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="*"/>
         <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0" 
                   Text="Endpoint OTLP (facoltativo, altrimenti localhost:4317)" 
                   Margin="10,10,10,5"/>

      <TextBox x:Name="EndpointBox" 
                 Grid.Row="1" 
                 Margin="10,0,10,10"/>

      <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="10,0,10,10" 
                    HorizontalAlignment="Center">
         <Button x:Name="BtnTrace" 
                    Width="140" 
                    Height="36" 
                    Content="Invia Traccia" 
                    Click="BtnTrace_Click" 
                    Margin="5,0"/>
         <Button x:Name="BtnMetric" 
                    Width="140" 
                    Height="36" 
                    Content="Invia Metrica" 
                    Click="BtnMetric_Click" 
                    Margin="5,0"/>
         <Button x:Name="BtnLog" 
                    Width="140" 
                    Height="36" 
                    Content="Invia Log" 
                    Click="BtnLog_Click" 
                    Margin="5,0"/>
      </StackPanel>

      <TextBlock Grid.Row="3" 
                   TextWrapping="Wrap" 
                   Margin="10" 
                   VerticalAlignment="Top">
            Premi i pulsanti per generare telemetria. Se hai un collector OTLP (Jaeger/Tempo/Azure Monitor) in ascolto, vedrai i dati arrivare.
      </TextBlock>

      <StatusBar Grid.Row="4" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Bottom">
         <StatusBarItem>
            <TextBlock x:Name="StatusText" Text="Pronto"/>
         </StatusBarItem>
      </StatusBar>
   </Grid>
</Window>